function zt=hotpot_v2(x,y,flag)

switch flag
    case 1
        %单源点
        zt=30*exp(-((x-15).^2+(y-10).^2)/30);%温度高斯分布
    case 2
         z1=40*exp(-((x-8).^2+(y-8).^2)/10);%温度高斯分布
         z2=30*exp(-((x-15).^2+(y-10).^2)/10);%温度高斯分布
         zt=z1+z2;
    case 3
    %多源点
     z1=15*exp(-((x-10).^2+(y-8).^2)/10);%温度高斯分布
     z2=30*exp(-((x-15).^2+(y-10).^2)/10);%温度高斯分布
     z3=40*exp(-((x-8).^2+(y-14).^2)/10);%温度高斯分布
     zt=z1+z2+z3;
end